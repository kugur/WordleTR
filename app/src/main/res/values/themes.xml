<resources xmlns:tools="http://schemas.android.com/tools" >
    <!-- Base application theme. -->
    <style name="Theme.WordleTR" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="boxButtonStyle">@style/myBoxDefault</item>
        <item name="keyButtonStyle">@style/myKeyboardKeyStyle</item>
    </style>

    <style name="myBoxDefault">
        <item name="android:layout_width"> 58dp </item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background"> @drawable/box_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="myKeyboardKeyStyle">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="backgroundColor">@color/grey_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13dp</item>
    </style>
</resources>