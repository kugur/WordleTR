<?xml version="1.0" encoding="utf-8"?>
<level-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:maxLevel="0" android:color="@color/black">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@color/dark_grey_border"
                android:width="2dp"
                >
            </stroke>
        </shape>
    </item>
    <item  android:maxLevel="1" android:color="@color/white">
        <shape >
            <solid android:color="@color/yellow"/>
        </shape>

    </item>
    <item  android:maxLevel="2" android:color="@color/white">
        <shape >
            <solid android:color="@color/green"/>
        </shape>

    </item>

</level-list>